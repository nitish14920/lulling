{
  "root": true,
  "extends": ["next/core-web-vitals", "next/typescript", "eslint:recommended"],
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "semi": ["error", "off"],
    "quotes": ["error", "double"],
    "no-unused-vars": "warn",
    "no-console": "warn",
    "react/react-in-jsx-scope": "off",
    "react/jsx-key": "warn",
    "@typescript-eslint/no-unused-vars": "off"
  }
}
